
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin
    function isAdmin() {
      return request.auth.token.admin == true || request.auth.token.email == 'damisileayoola@gmail.com';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Admins can read the entire collection.
      // Regular users can only read their own document.
      allow read: if isAdmin() || request.auth.uid == userId;

      // Users can only create their own document.
      allow create: if request.auth.uid == userId;

      // Users can only update their own document.
      allow update: if request.auth.uid == userId;

      // Users cannot delete their own user document.
      allow delete: if false;
    }

    // Rules for nested collections (notes, tags, files)
    match /users/{userId}/{collection}/{docId} {
      // A user can perform any action on documents within their own nested collections.
      allow read, write: if request.auth.uid == userId;
    }
  }
}
