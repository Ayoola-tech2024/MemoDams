rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the `users/{userId}` directory
    match /users/{userId}/{allPaths=**} {
      // Allow read and write operations (create, delete, get) only if the
      // requesting user's ID matches the {userId} in the path.
      // This ensures users can only access their own files.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
