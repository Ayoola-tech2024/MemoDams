
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read, write, and delete files within their own user-specific folder.
    // The path checks that the file is in a folder named after the user's UID.
    match /users/{userId}/{allPaths=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
